{
  "name": "@dnd/ai-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "db:generate": "prisma generate",
    "start": "node dist/index.js",
