# D&D Board Game - Production Environment Variables
# Copy this to .env.production and fill in your values

# ===================
# Database (Required)
# ===================
DATABASE_URL=postgresql://user:password@host:5432/dnd_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=dnd_prod

# ===================
# Redis (Required)
# ===================
REDIS_URL=redis://:password@host:6379
REDIS_PASSWORD=your-redis-password

# ===================
# Authentication (Required)
# ===================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRY=7d

# ===================
# Site Password Protection (Required for staging)
# ===================
ENABLE_BASIC_AUTH=true
SITE_USERNAME=admin
SITE_PASSWORD=your-staging-password

# ===================
# NanoBanana AI Image Generation
# ===================
NANOBANANA_API_KEY=your-nanobanana-api-key

# This MUST be your public production URL (e.g., https://your-app.railway.app)
# NanoBanana will send image results to this URL
CALLBACK_BASE_URL=https://your-api-domain.com

# ===================
# URLs
# ===================
# The public URL of your API (used by frontend)
NEXT_PUBLIC_API_URL=https://your-api-domain.com

# ===================
# Optional
# ===================
NODE_ENV=production
PORT=4000
